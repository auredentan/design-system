{
    "compilerOptions": {
        "allowSyntheticDefaultImports": true,
        "baseUrl": "./src",
        "esModuleInterop": true,
        "experimentalDecorators": true,
        "forceConsistentCasingInFileNames": true,
        "jsx": "react",
        "lib": ["es6", "dom"],
        "module": "esnext",
        "moduleResolution": "node",
        "noEmit": true,
        "noImplicitReturns": true,
        "noUnusedLocals": true,
        "noUnusedParameters": true,
        "paths": {
            "LumX": ["./react.index.ts"],
            "LumX/icons": ["./icons"],
            "LumX/icons/*": ["./icons/*"],
            "LumX/components": ["./components"],
            "LumX/components/*": ["./components/*"],
            "LumX/core": ["./core"],
            "LumX/core/*": ["./core/*"],
            "LumX/react": ["./core/react"],
            "LumX/react/*": ["./core/react/*"]
        },
        "strict": true,
        "target": "es5"
    },
    "exclude": ["**/dist/"]
}
