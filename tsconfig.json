{
    "compilerOptions": {
        "module": "es6",
        "target": "es5",
        "lib": ["es6", "dom"],
        "jsx": "react",
        "moduleResolution": "node",
        "forceConsistentCasingInFileNames": true,
        "strict": true,
        "noEmit": true,
        "esModuleInterop": true,
        "experimentalDecorators": true,
        "baseUrl": "./src",
        "allowSyntheticDefaultImports": true,
        "paths": {
            "@lumx/core": ["./react.index.ts"],
            "@lumx/icons": ["./icons"],
            "@lumx/icons/*": ["./icons/*"],
            "core": ["./core"],
            "core/*": ["./core/*"]
        }
    },
    "exclude": ["**/dist/"]
}
